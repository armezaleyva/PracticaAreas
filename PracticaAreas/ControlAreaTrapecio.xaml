<UserControl x:Class="PracticaAreas.ControlAreaTrapecio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaAreas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="8,8,0,0">Base Mayor:</TextBlock>
        <TextBlock Margin="8,8,0,0" Grid.Column="1">Base Menor:</TextBlock>
        <TextBox Name="txtBaseMayorTrapecio" Margin="8,8,0,0" Grid.Row="1"></TextBox>
        <TextBox Name="txtBaseMenorTrapecio" Margin="8,8,0,0" Grid.Column="1" Grid.Row="1"></TextBox>
        <TextBlock Margin="8,8,0,0" Grid.Row="2">Altura:</TextBlock>
        <TextBox Name="txtAlturaTrapecio" Margin="8,8,0,0" Grid.Row="3"></TextBox>
    </Grid>
</UserControl>
